<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.5)), url(https://images.pexels.com/photos/1283219/pexels-photo-1283219.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <div class="container">
    <h1>Cocktails from <strong>all around the World</strong> !</h1>
    <p>Welcome to Julio's bar</p>
    <%= link_to 'Suggest your own', new_cocktail_path, class: "btn btn-flat"  %>
  </div>
</div>

<br>

<div class="main-cointainer">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>

      <div class="card-trip">
        <%= cl_image_tag cocktail.photo.url, height: 300, width: 400 %>
        <div class="class-trip-infos">
          <div>
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
            <h2 class="card-trip-pricing">Strong</h2>
        </div>
      </div>
          <% end %>
  </div>
</div>




